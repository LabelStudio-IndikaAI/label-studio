.spinner
  --spinner-size 50px
  --bar-width 8px
  --bar-height 20px
  --spinner-duration 2.5s
  --spinner-color #FA8C16

  position relative
  width var(--spinner-size)
  height var(--spinner-size)

  &__body
    top 50%
    left 50%
    width var(--spinner-size)
    height var(--spinner-size)
    position absolute
    transform translate(-50%, -50%)
    will-change transform, height

    &:not(&_stopped)
      animation bars-up-down var(--spinner-duration) ease infinite

  &__bar
    width var(--bar-width)
    height var(--bar-height)
    background-color var(--spinner-color)
    margin 0 auto
    position absolute
    bottom 0
    animation: bars-up-down-var(--spinner-duration) ease infinite
    &:nth-child(1)
      left 0
      background: -webkit-gradient(linear, left top, left bottom, from(#1ee95d), to(#5714ce));
      background: -webkit-linear-gradient(top, #1ee95d, #5714ce);
      background: -o-linear-gradient(top, #1ee95d, #5714ce);
      background: linear-gradient(to bottom, #1ee95d, #5714ce);
    &:nth-child(2)
      left 50%
      transform translateX(-50%)
      background: -webkit-gradient(linear, left top, left bottom, from(#1ee95d), to(#5714ce));
      background: -webkit-linear-gradient(top, #1ee95d, #5714ce);
      background: -o-linear-gradient(top, #1ee95d, #5714ce);
      background: linear-gradient(to bottom, #1ee95d, #5714ce);
    &:nth-child(3)
      right 0
      transform translate(50%, 50%)

@keyframes logo-spin
  0%
    transform translate(-50%, -50%) rotate(0deg)

  20%
    width 0
    height 0
    transform translate(-50%, -50%) rotate(0deg)

  45%
    width 0
    height 0
    transform translate(-50%, -50%) rotate(90deg)

  70%
    width var(--spinner-size)
    height var(--spinner-size)
    transform translate(-50%, -50%) rotate(90deg)

  100%
    width var(--spinner-size)
    height var(--spinner-size)
    transform translate(-50%, -50%) rotate(90deg)

.spinner
  --spinner-size: 50px
  --spinner-color: #FA8C16
  --spinner-duration: 1s

  display: inline-block
  width: var(--spinner-size)
  height: var(--spinner-size)
  border-radius: 50%
  border: 4px solid rgba(255, 255, 255, 0.3)
  border-top-color: var(--spinner-color)
  animation: spin var(--spinner-duration) linear infinite

@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)

