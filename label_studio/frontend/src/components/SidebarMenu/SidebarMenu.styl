.sidebar-menu
  flex 1
  display flex
  max-height calc(100vh - var(--header-height))
  flex-direction column

  &__navigation
    width (var(--menu-sidebar-width)) // to match the 1px border of the logo in header
    display flex
    flex-shrink 0
    align-items center
  

  &__content
    flex 1
    overflow auto
    padding-top 32px
    padding-bottom 32px
    padding-left 50px
    box-shadow -1px 0 0 0 rgba(#000, 0.1)
