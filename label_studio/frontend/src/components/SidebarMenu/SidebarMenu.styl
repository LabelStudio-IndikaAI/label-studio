.sidebar-menu
  flex 1
  display flex
  max-height calc(100vh - var(--header-height))
  flex-direction column

  &__navigation
    width 100%
    display flex
    flex-shrink 0
    align-items center
    box-shadow 0px 2px 1px 0px #d6d6d6

  

  &__content
    flex 1
    overflow auto
    padding-top 40px
    padding-bottom 32px
    background-color #f6f6f6
    box-shadow -1px 0 0 0 rgba(#000, 0.1)
