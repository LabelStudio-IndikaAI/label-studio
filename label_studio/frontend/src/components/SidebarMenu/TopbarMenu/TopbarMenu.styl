.topbar-menu
  flex-direction column // Change to a column layout for the main container
  display flex
  max-height calc(100vh - var(--header-height))

  &__topbar
    // Style the top bar as a horizontal menu
    display flex
    background-color #333 // Change to your desired background color
    padding 8px 16px // Adjust padding as needed
    align-items center // Center items vertically

    // Style the menu items in the top bar
    .menu-item
      margin-right 16px // Adjust spacing between menu items as needed

  &__content
    flex 1
    overflow auto
    padding 32px 40px
    box-shadow -1px 0 0 0 rgba(#000, 0.1)
