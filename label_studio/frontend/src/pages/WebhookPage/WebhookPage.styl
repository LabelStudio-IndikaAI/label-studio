.webhook-wrap
    width 100%
    max-width 90%
    margin auto
    margin-bottom 10px
    background-color #f6f6f6
    border 1px solid #f6f6f6
    padding 0px 20px
    border-radius 5px
    box-shadow rgba(0, 0, 0, 0.1) 0px 4px 6px
    color rgb(51,51,51)
    font-size 16px
    display flex

    &__header
        padding 3px
        width 100%
        color #1A73E8
        background-color #D7E2FF
        font-size 13px
        box-sizing border-box
        border-radius 5px
        box-shadow 0px 0px 0px 0px
        & p
            display flex
            align-items center
            gap 5px
            line-height 1
            margin: auto

        

.webhook
    &__title
        background #1A73E8
        color #fff
        padding 10px
        text-align start
        font-weight 500

    &__title-base
        color rgba(0, 0, 0, 0.6)
        cursor pointer

    &__controls
        display flex
        justify-content space-between
        margin-bottom 32px

    &__content
        display grid
        grid-template-rows min-content
        align-items flex-start
        grid-gap 20px

.webhook-delete-modal
    &__width-button
        width 170px

    &__modal-text
        margin-bottom 32px

.webhook-list
    &__item
        display flex
        margin auto
        padding 12px
        align-items center
        justify-content space-between
        font-size 16px

    &__item-url
        color black
        max-width 370px
        overflow hidden
        text-overflow ellipsis
        cursor pointer
        font-size 18px
        height 24px

    &__item-date
        color rgba(0, 0, 0, 0.4)

    &__item-control
        display flex
        align-items center
        gap 10px
        justify-content space-between

.webhook-form
    &__form-row
        paddingLeft 16

    &__form-toggle
        justify-content flex-end

.webhook-detail
    &__width-button
        width 170px

    &__black-text
        color black

    &__activator
        width auto

    &__url-space
        

    &__url-input
        align-self stretch
        width auto

    &__form-label
        padding-left 0px

    &__form-row
        margin-bottom 24px

    &__delete-button
        width 170px
        margin-right auto

    &__cancel-button
        margin-right 16px
        width 123px

    &__status
        margin-right 1px

    &__save-button
        width 170px

    &__headers
        border-radius 3px

    &__headers-control
        height 40px

    &__headers-add
        & span
            color #5F6368 !important

        height 32px
        width 32px
        padding 0px !important
        margin-right 12px

    &__headers-row
        grid-template-columns 1fr 1fr 28px
        margin 4px 8px 4px 8px

        &:last-child
            margin-bottom 24px

    &__headers-remove
        height 32px
        width 32px
        border 1px solid #ff0000
        padding 0px 0px !important

    &__headers-input
        height 32px
        min-height 32px
        background white

    &__controls
        display flex
        justify-content flex-end
        align-items center
        padding 0px 10px
        margin-top 10px
        margin-bottom: 10px

.webhook-payload
    border-radius 3px

    &__title
        &_black
            color black

    &__content
        padding 2px 16px

    &__content-row
        margin-bottom 2px

    &__actions
        display grid
        grid-template-columns repeat(auto-fit, minmax(35%, 1fr))
        align-items baseline
